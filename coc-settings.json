{
  // The rest are done with coc extensions
  "suggest.timeout": 5000,
  "diagnostic.errorSign": "üï±",
  "diagnostic.warningSign": "‚ò¢",
  "diagnostic.infoSign": "ÔÅö",
  "diagnostic.hintSign": "ÔØ¶",
  "coc.preferences.messageLevel": "warning",
  "javascript.suggestionActions.enabled": false,
  "codeLens.enable": true,
  "suggest.maxCompleteItemCount": 30,
  "coc.source.omni.filetypes": ["sh", "css", "scss"],
  "rust-client.channel": "stable",
  "coc.preferences.hoverTarget": "preview",
  "prettier.requireConfig": true,
  "eslint.packageManager": "yarn",
  "eslint.nodePath": "~/.config/yarn/global/node_modules",
  "scss.lint.unknownProperties": "ignore",
  "css.lint.unknownProperties": "ignore",
  "languageserver": {
    "docker": {
      "enable": false,
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["Dockerfile"]
    },
    "bash": {
      "enable": false,
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "haskell": {
      "enable": false,
      "command": "hie-wrapper",
      "filetypes": ["haskell"],
      "rootPatterns": [
        "stack.yaml",
        "stack.yml",
        "cabal.project",
        "shell.nix",
        ".vim/",
        ".git/",
        ".hg/"
      ]
    }
  }
}
