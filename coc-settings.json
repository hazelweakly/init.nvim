{
    "tslint.alwaysShowRuleFailuresAsWarnings": true,
    "suggest.preferCompleteThanJumpPlaceholder": true,
    "suggest.detailField": "menu",
    "signature.preferShownAbove": true,
    "suggest.enablePreview": true,
    "diagnostic.errorSign": "üï±",
    "diagnostic.warningSign": "‚ò¢",
    "diagnostic.infoSign": "ÔÅö",
    "diagnostic.hintSign": "ÔØ¶",
    "coc.preferences.messageLevel": "warning",
    "codeLens.enable": true,
    "suggest.maxCompleteItemCount": 30,
    // "rust-client.channel": "stable",
    "coc.preferences.formatOnSaveFiletypes": [
        "jsonc",
        "json",
        "css",
        "typescript",
        "javascript",
        "typescriptreact",
        "javascriptreact"
    ],
    "scss.lint.unknownProperties": "ignore",
    "css.lint.unknownProperties": "ignore",
    "languageserver": {
        "docker": {
            "enable": false,
            "command": "docker-langserver",
            "args": ["--stdio"],
            "filetypes": ["Dockerfile"]
        },
        "haskell": {
            "enable": false,
            "command": "hie-wrapper",
            "filetypes": ["hs", "lhs", "haskell"],
            "rootPatterns": [
                "stack.yaml",
                "cabal.config",
                "cabal.project",
                "shell.nix"
            ]
        }
    }
}
