{
    // The rest are done with coc extensions
    "coc.preferences.preferCompleteThanJumpPlaceholder": true,
    "coc.preferences.timeout": 5000,
    "coc.preferences.diagnostic.errorSign": "üï±",
    "coc.preferences.diagnostic.warningSign": "‚ò¢",
    "coc.preferences.diagnostic.infoSign": "ÔÅö",
    "coc.preferences.diagnostic.hintSign": "ÔØ¶",
    "coc.preferences.messageLevel": "warning",
    "coc.preferences.codeLens.enable": true,
    "coc.preferences.maxCompleteItemCount": 35,
    "coc.source.omni.filetypes": ["php", "sh", "css"],
    "coc.preferences.hoverTarget": "echo",
    "prettier.requireConfig": true,
    "prettier.eslintIntegration": true,
    "languageserver": {
        "Dockerfile": {
            "command": "docker-langserver",
            "args": ["--stdio"],
            "filetypes": ["Dockerfile"]
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "haskell": {
            "command": "hie-wrapper",
            "args": ["--stdio"],
            "filetypes": ["haskell"],
            "rootPatterns": [
                "stack.yaml",
                "stack.yml",
                "cabal.project",
                "shell.nix",
                ".vim/",
                ".git/",
                ".hg/"
            ]
        }
    }
}
